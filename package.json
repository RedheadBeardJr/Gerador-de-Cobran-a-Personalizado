{
  "name": "gerador-de-cobranca-saas",
  "version": "0.1.0",
  "private": true,
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:prod": "node server.js",
    "dev": "nodemon server.js",
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc --noEmit",
    "build:ci": "npm run typecheck && npm run build",
    "docker:build": "docker build -t gerador-de-cobranca .",
    "lint": "eslint . --ext .js,.ts --max-warnings=0",
    "format": "prettier --write \"**/*.{js,ts,json,md,css,ejs}\"",
    "prepare": "husky install",
    "test": "jest --runInBand",
    "test:ci": "NODE_ENV=test jest --runInBand --detectOpenHandles",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@sentry/node": "^10.32.1",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "dotenv": "^16.1.4",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.6",
    "stripe": "^12.18.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^20.8.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^13.3.0",
    "nodemon": "^3.0.1",
    "prettier": "^2.8.8",
    "prisma": "^5.16.0",
    "supertest": "^6.3.3",
    "typescript": "^5.8.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "prisma": {
    "schema": "./prisma/schema.prisma"
  }
}
